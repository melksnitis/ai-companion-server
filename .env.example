# API Configuration
APP_NAME="Evolving Personal AI Assistant"
APP_VERSION="0.1.0"
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000

# API Keys
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENROUTER_API_KEY=your-openrouter-api-key-here
TODOIST_API_TOKEN=your-todoist-api-token-here

# Model Configuration
# Note: Model selection is handled by Claude Code Router (see router/config.json)
# The router determines which model to use based on routing rules (default, background, think, etc.)
MAX_TOKENS=4096

# Letta Learning SDK Configuration
LETTA_API_KEY=your-letta-api-key-here
LETTA_BASE_URL=https://api.letta.com
LETTA_AGENT_NAME=evolving-assistant

# Claude Code Router Configuration
ROUTER_API_KEY=your-router-secret-key

# Workspace Configuration
WORKSPACE_PATH=./workspace

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./data/memory.db

# Security
SECRET_KEY=change-me-in-production-use-a-random-string
